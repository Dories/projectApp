<?xml version="1.0" encoding="gbk"?>
<validators>
    
     <field name="realName" >
        <field-validator type="requiredstring" >
            <message>受益人姓名未告知，请告知</message>
        </field-validator>
          <field-validator type="username" >
            <message>受益人姓名有误，请重新确认</message>
        </field-validator>
     	<field-validator type="stringlength" >
            <message >
                                    受益人姓名只能有2-36个字符，请重新确认
            </message>
            <min>2</min>
            <max>36</max>
        </field-validator>
    </field>
     
     <!-- 性别验证器 -->
   	<field name="sex" >
        <field-validator type="requiredstring" >
            <message>受益人性别未告知，请告知</message>
        </field-validator>
        
    </field>
      <!-- 生日验证器 -->
     <field name="birthday">
          <field-validator type="requiredstring" >
            <message>受益人生日未告知，请告知</message>
        </field-validator>
        <field-validator type="daterange">
            <message>投保人出生日期不能早于当前日期</message>
            <max>${sysdate}</max>
        </field-validator>
    </field>
    
     <field name="idType" >
        <field-validator type="requiredstring" >
            <message>受益人证件类型未告知，请告知</message>
        </field-validator>
    </field>
     
     <field name="idType" >
        <field-validator type="requiredstring" >
            <message>受益人证件类型未告知，请告知</message>
        </field-validator>
    </field>
    
      <field name="idEndDate">
        <field-validator type="requiredstring" >
             <if><![CDATA["0".equals("${idType}")]]></if>
            <message>受益人身份证有效期未告知，请告知</message>
        </field-validator>
    </field>
    
     <field name="relationToInsured" >
        <field-validator type="requiredstring" >
            <message>受益人与被保人关系未告知，请告知</message>
        </field-validator>
    </field>
    
     <field name="bnfLot" >
        <field-validator type="requiredstring" >
            <message>受益份额未告知，请告知</message>
        </field-validator>
    </field>
    
     <field name="bnfGrade" >
        <field-validator type="requiredstring" >
            <message>受益顺序未告知，请告知</message>
        </field-validator>
    </field>
    
       <field name="address" >
        <field-validator type="requiredstring" >
            <message>受益人地址未告知，请告知</message>
        </field-validator>
    </field>
    
    <!-- 证件类型（如果证件类型为出生日期 并且年龄大于18） -->
    <field name="idType">
        <field-validator type="requiredstring">
            <if><![CDATA["9".equals("${idType}") && ${age} > 18]]></if>
            <message>受益人证件类型不为有效证件，请重新确认</message>
        </field-validator>
    </field>
    
          <!-- 证件号码必须输入 -->
    <field name="idNo">
        <field-validator type="nochinese">
            <message >
                                    投保人证件号码不能包含汉字！
            </message>
        </field-validator> 
        <field-validator type="requiredstring">
            <message>受益人证件号码未告知，请告知</message>
        </field-validator>
        
        <field-validator type="stringlength" >
            <if><![CDATA["0".equals("${idType}")]]></if>
            <message>受益人身份证号码输入位数有误，请重新确认</message>
            <min>18</min>
            <max>18</max>
        </field-validator>
	 </field>
	    
	       <!-- 证件号码格式验证 -->
	  <!--   <field name="idNo">
	        <field-validator type="bnfresidencebooklet">
	            <if><![CDATA["4".equals("${idType}")]]></if>
	            <message>受益人证件号码输入有误，请重新确认</message>
	        </field-validator>
	    </field> -->
        
         <!-- 证件号码格式验证 -->
    <field name="idNo">
        <field-validator type="idcard">
            <if><![CDATA["0".equals("${idType}")]]></if>
            <message>受益人身份证号码有误，请重新确认</message>
        </field-validator>
    </field>
    
    <!-- 证件号码格式验证 -->
	<field name="idNo">
		<field-validator type="idcard">
			<if><![CDATA["0".equals("${idType}") || ("4".equals("${idType}") && ${age}>=18)]]></if>
			<messagePrefix>受益人</messagePrefix>
			<sex>${sex}</sex>
			<birthday>${birthday}</birthday>
		</field-validator>
		
		<field-validator type="stringlength">
             <if><![CDATA["1".equals("${idType}")]]></if>
             <message >
                                    受益人证件类型为1-中国护照，证件号码位数必须为7-10个字符，请核实。
            </message>
            <min>7</min>
            <max>10</max>
        </field-validator>
        
        <field-validator type="stringlength">
             <if><![CDATA["H".equals("${idType}")]]></if>
             <message >
                                    受益人证件类型为H-外国护照，证件号码位数必须为3-20个字符，请核实。
            </message>
            <min>3</min>
            <max>20</max>
        </field-validator>
        
        <field-validator type="stringlength">
             <if><![CDATA["B".equals("${idType}")]]></if>
             <message >
                                    受益人证件类型为B-港澳居民来往内地通行证，证件号码位数必须为11个字符，请核实。
            </message>
            <min>11</min>
            <max>11</max>
        </field-validator>
        
        <field-validator type="stringlength">
             <if><![CDATA["E".equals("${idType}")]]></if>
             <message >
                                   受益人证件类型为E-台湾居民来往大陆通行证，证件号码位数必须为8-10个字符，请核实。
            </message>
            <min>8</min>
            <max>10</max>
        </field-validator>
        
        <field-validator type="stringlength">
             <if><![CDATA["7".equals("${idType}")]]></if>
             <message >
                                   受益人证件类型为7-出生证，证件号码位数必须为8-12个字符，请核实。
            </message>
            <min>8</min>
            <max>12</max>
        </field-validator>
        
        <field-validator type="stringlength">
             <if><![CDATA["2".equals("${idType}")]]></if>
             <message >
                                   受益人证件类型为2-军官证，证件号码必须为10-18个字符，请核实。
            </message>
            <min>10</min>
            <max>18</max>
        </field-validator>
        
        <field-validator type="stringlength">
             <if><![CDATA["A".equals("${idType}")]]></if>
             <message >
                                   受益人证件类型为A-士兵证，证件号码必须为10-18个字符，请核实。
            </message>
            <min>10</min>
            <max>18</max>
        </field-validator>
        <field-validator type="stringlength">
             <if><![CDATA["I".equals("${idType}")]]></if>
             <message >
                                   受益人证件类型为I-外国人永久居留证，证件号码必须为15个字符，请核实。
            </message>
            <min>15</min>
            <max>15</max>
        </field-validator>
	</field>
	
          <!-- 证件号码格式验证 -->
    <field name="idNo">
        <field-validator type="regex">
            <if><![CDATA["7".equals("${idType}")]]></if>
            <regex>^[A-Za-z]\w+$</regex>
            <message>受益人证件类型为7-出生证，证件号码必须为字母开头，请核实。</message>
        </field-validator>
        <field-validator type="regex">
            <if><![CDATA["B".equals("${idType}")]]></if>
            <regex>^[A-Za-z]\w+$</regex>
            <message>
                受益人证件类型为B-港澳居民来往内地通行证，证件号码必须为字母开头，请核实。</message>
        </field-validator>
    </field>
    
</validators>