<?xml version="1.0" encoding="gbk"?>
<validators>
    <field name="realName" >
        <field-validator type="requiredstring" >
            <message>投保人姓名必须输入</message>
        </field-validator>
     <field-validator type="stringlength" >
            <message >
                                    投保人姓名只能有2-36个字符
            </message>
            <min>2</min>
            <max>36</max>
        </field-validator>
         <field-validator type="username">
            <message>投保人姓名有误，请重新确认</message>
        </field-validator>
        
    </field>
    <field name="occupationCode" >
        <field-validator type="regex">
            <if><![CDATA["0".equals("${sex}")]]></if>
            <regex>^((?!8010104).)*$</regex>
            <message>客户为男性时，不允许选择职业为家庭主妇</message>
        </field-validator>
        <field-validator type="requiredstring" >
            <message>投保人职业编码不能为空</message>
        </field-validator>
         <field-validator type="regex">
            <if><![CDATA[${age}>=18]]></if>
            <regex>^((?!8010103).)*$</regex>
            <message>客户大于18周岁，不允许选择职业为学龄前儿童</message>
        </field-validator>
        <field-validator type="regex">
            <if><![CDATA[${age}<=3]]></if>
            <regex>8010103</regex>
            <message>客户小于3周岁，职业应为学龄前儿童</message>
        </field-validator>
        <field-validator type="regex">
            <if><![CDATA["1".equals("${sex}")&&${age}<=15]]></if>
            <regex>^((?!8010104).)*$</regex>
            <message>客户为女性时年龄小于等于１５周岁，不允许选择职业为家庭主妇</message>
        </field-validator>
    </field>
    
        <field name="sex" >
        <field-validator type="requiredstring" >
            <message>投保人性别不能空</message>
        </field-validator>
        
    </field>
      <!-- 生日验证器 -->
     <field name="birthday">
          <field-validator type="requiredstring" >
            <message>投保人生日不能为空</message>
        </field-validator>
        <field-validator type="daterange">
            <message>投保人出生日期不能早于当前日期</message>
            <max>${sysdate}</max>
        </field-validator>
    </field>
      <!-- 生日验证器 -->
     <field name="age">
        <field-validator type="intrange">
            <message>投保人年龄不能少于18岁</message>
            <min>18</min>
        </field-validator>
    </field>
</validators>